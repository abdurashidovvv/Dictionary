<?xml version="1.0" encoding="utf-8"?><androidx.cardview.widget.CardView    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_marginBottom="50dp"    app:cardCornerRadius="20dp"    android:orientation="vertical">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:background="@drawable/rv_item_background"        android:padding="20dp"        android:orientation="vertical">        <TextView            android:id="@+id/word"            android:layout_width="match_parent"            android:layout_height="wrap_content"            style="@style/rv_item_tv"            android:text="world"/>        <TextView            android:id="@+id/definition"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginVertical="10dp"            style="@style/rv_item_tv"/>        <TextView            android:id="@+id/meaning"            android:layout_width="match_parent"            android:layout_height="wrap_content"            style="@style/rv_item_tv"/>        <TextView            android:id="@+id/phonetics"            android:layout_width="match_parent"            android:layout_height="wrap_content"            style="@style/rv_item_tv"/>    </LinearLayout></androidx.cardview.widget.CardView>